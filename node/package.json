    "mini-blake3": "^6.5.5"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.5",
    "@types/uuid": "^8.3.4",
    "ava": "^4.0.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^14.2.0",
    "grpc_tools_node_protoc_ts": "^5.3.2",
